<div class="answer_page">
  <% if @wear.user.id == current_user.id %>
    <%= form_for @wear do |f| %>
      <h2>登録情報</h2><br>
      <div class="form-group">
        <%= f.text_field :price, :class => "form-control" %><br>
      </div>
      <div class="form-group">
        <%= f.submit "送信", :class => "btn btn-primary withripple" %>
      </div>
    <% end %>
  <% else %>
    <%= render 'common/error' %>
  <% end %>
</div>