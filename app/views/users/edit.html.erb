<div class="answer_page">
  <% if @user.id == current_user.id %>
    <%= form_for current_user do |f| %>
      <h2>登録情報</h2><br>
      <div class="form-group">
        <%= f.text_field :family_name, placeholder: "姓", :class => "form-control" %><br>
        <%= f.text_field :first_name , placeholder: "名", :class => "form-control" %><br>
      </div>
      <div class="form-group">
        <%= f.submit "送信", :class => "btn btn-primary withripple" %>
      </div>
    <% end %>
  <% else %>
    <%= render 'common/error' %>
  <% end %>
</div>